<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="app.androidgeofence.ProfileActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="content"
        android:scaleType="centerCrop"
        android:src="@drawable/user" />

    <TextView
        android:id="@+id/fullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:textColor="@color/Black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/id_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fullname"
        android:textColor="@color/Black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_number"
        android:textColor="@color/Black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/date_of_birth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gender"
        android:textColor="@color/Black"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/actions_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_of_birth"
        android:layout_marginTop="60dp"
        android:orientation="horizontal">
        <!-- Get Location Button -->
        <Button
            android:id="@+id/btnGetLocation"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Get Location"
            android:textStyle="bold" />

        <!-- Edit Information -->
        <Button
            android:id="@+id/btnEditUserInformation"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Edit User Info"
            android:textSize="15sp"
            android:textStyle="bold" />

        <!-- EComment -->
        <Button
            android:id="@+id/btnComment"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Add Comment"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/actions_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_of_birth"
        android:layout_marginTop="60dp"
        android:orientation="horizontal">
        <!-- Get Location Button -->
        <Button
            android:id="@+id/btnAddSafeZOne"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Add Safe Zone"
            android:textStyle="bold" />

        <!-- Edit Information -->
        <Button
            android:id="@+id/btnViewSafeZones"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="View Safe Zones"
            android:textSize="15sp"
            android:textStyle="bold" />

        <!-- EComment -->
        <Button
            android:id="@+id/btnGenerateReports"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Generate Reports"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>
